<!DOCTYPE html>
<html>
    <head>
        <% include head %>
        <script type="text/javascript">
            // GET chat msgs
            window.onload = () => {
                document.getElementById("joinCode").innerHTML = "<span>JOIN CODE: " + <%= joinCode %> + "</span>";

                if (<%= loggedIn %>) {
                    $('#loggedIn').append("<a href='/logout'>LOGOUT</a>");
                }
                //connect(); //connect to websockets
            }
        </script>
    </head>

    <body>
        <% include header %>
        <script type="text/javascript">document.getElementById("home").className="active";</script>

        <div id="main">
                <h1>PEYTON'S CHAT</h1>

                <div id="msgs">
                    <!-- MESSAGES WILL BE DISPLAYED HERE -->
                    <script>
                        if (<%= hasMsgs %>) {displayMsgs(<%- JSON.stringify(msgs) %>);} else {
                            document.write("<p id='nomsgs'>No messages here yet.<p>");
                        }
                    </script>
                </div>

                <div id="createMsg">
                    <form id="msgForm" autocomplete="off">
                        <textarea name="content" placeholder="Send a message"></textarea><button onclick="sendMsg();">SEND</button>
                    </form>
                </div>
        </div>

        <% include footer %>
    </body>
</html>
